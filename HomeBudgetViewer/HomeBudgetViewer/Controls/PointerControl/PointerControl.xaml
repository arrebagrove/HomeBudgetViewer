<UserControl
    x:Class="HomeBudgetViewer.Controls.PointerControl.PointerControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:HomeBudgetViewer.Controls.PointerControl"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignHeight="300"
    d:DesignWidth="400">

    <Border
        Margin="0,5,5,5"
        Padding="5"
        BorderBrush="Transparent"
        BorderThickness="0"
        CornerRadius="32"
        Background="{StaticResource MainAppBrush}">
        <SymbolIcon
            Symbol="Send"
            Height="32"
            Width="32"
            Foreground="{StaticResource ContrastColorBrush}"/>
    </Border>
</UserControl>
